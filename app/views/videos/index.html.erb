


<div class="row">
    <div class="col-md-12 buttonspace">
      <% if user_signed_in? %> <%= link_to "Add a New Screencast", new_video_path, class: "btn btn-success"%><br>
    <% end %></div>




    <% @videos.each do |video| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag href="/img/video.jpg" %>
          <div class="caption">
            <h3><%= link_to video.title, video %></h3>
              <p><%= video.description %></p>
          </div>
      </div>  
    </div>
    <% end %>
  </div>

