<div class="container">
    <div class="row">
    
        <div class="col-md-8">
            <div class="embed-container">
            <h1><%= @video.title %></h1>
                <iframe width="560" height="315" src="//www.youtube.com/embed/<%= @video.youtube_id %>" frameborder="0" allowfullscreen></iframe>

               <br> <%= @video.youtube_id %>
            </div>
        </div>

        <div class="col-md-4">

            <h1>Details</h1>
            <ul>
                <li><%= @video.title %></li>
                <li><%= @video.description %></li>
                <li><%= @video.author %></li>
                <li><%= link_to "Author Website", @video.author_url, target: "_blank" %></li>
            </ul>

        </div>


    </div>
</div>
