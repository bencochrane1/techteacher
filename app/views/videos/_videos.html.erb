<div class="container">
  <div class="row">

      <% @videos.each do |video| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <% unless video.categories.count == 0 %>
            <%= link_to image_tag(video.categories.first.image.url), video %>
          <% end %>
            <div class="caption">
              <h3><%= link_to video.title.truncate(70), video %></h3>
                <p><%= video.description.truncate(100) %></p>
            </div>
        </div>  
      </div>
      <% end %>
    </div>
  </div>
