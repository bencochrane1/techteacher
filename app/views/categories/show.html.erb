<h1>Category</h1>

<%= @category.name %>

<strong>Actions:</strong>
<p>
<%= image_tag @category.image.url(:large) %>
<%= link_to "Edit", edit_category_path %>
<%= link_to "Destroy", @category, method: :delete, data: { confirm: "Are you sure?" } %>
</p>




<div class="row">
    <div class="col-md-12 buttonspace">
      <%= link_to "Add a New Screencast", new_video_path, class: "btn btn-success"%><br>
    </div>
    <% @videos.each do |video| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag href="/img/video.jpg" %>
          <div class="caption">
            <h3><%= link_to video.title, video %></h3>
              <p><%= video.description %></p>
          </div>
      </div>  
    </div>
    <% end %>
  </div>
