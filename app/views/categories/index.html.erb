<div class="container padded">
  <div class="row">

  <h1>All Categories</h1>


  <table class="table table-striped table-bordered">
    <tr>
      <th class="center">Image</th>
      <th class="center">Title</th>
      <th class="center">Action</th>
    </tr>
    <% @categories.each do |category| %>
    <tr>
      <td><%= image_tag(category.image.url(:thumb)) %></td>
      <td><%= category.name %></td>
      <td>
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
          Action
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
            <li class="left"><%= link_to "Edit", edit_category_path(category), class: "btn btn-link" %></li>
            <li class="left"><%= link_to "Destroy", category, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>
    <% end %>
  </table>
  <br>

  <% if user_signed_in? %>
  <%= link_to 'Add a Category', new_category_path, class: "btn btn-primary", data: { no_turbolink: true } %>
  <% end %>

  </div>
</div>